<!doctype html>
<html lang=''>
<head>
   <meta charset='utf-8'>
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="styles.css">
   <script src="https://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
   <script src="script.js"></script>
   <title>CSS MenuMaker</title>
</head>

<header>
   <script>
      $( document ).ready(function() {
      $('#cssmenu').prepend('<div id="menu-button">AEA</div>');
         $('#cssmenu #menu-button').on('click', function(){
            var menu = $(this).next('ul');
            if (menu.hasClass('open')) {
               menu.removeClass('open');
            }
            else {
               menu.addClass('open');
            }
         });
      });
   </script>
</header>

<body>

	<div id='cssmenu'>

		<ul>

         <% if user_signed_in? %>

            <%if current_user.city_id %>
            
               <li><a href='<%=root_path%>'><span><p class="header-regular-text"><%= City.find(current_user.city_id).name %></p><p class="header-home">Locations</p></span></a></li>
            
            <%else%>

               <li><a href='<%=root_path%>'><span><p class="header-regular-text">Locations</p><p class="header-home">Locations</p></span></a></li>
            
             <%end%>


         <%else%>

            <li><a href='<%=root_path%>'><span><p class="header-regular-text">Locations</p><p class="header-home">Locations</p></span></a></li>

         <%end%>

		   <li><a href='<%=classes_path%>'><span><p class="header-regular-text">Classes</p><p class="header-home">Classes</p></span></a></li>

		   <a href='<%=root_path%>' class="app-name"><span><p class="header-app-name">PopupSchools</p><p class="header-home">Home</p></span></a>

		   <% if user_signed_in?%>

				<li class="right" class='active has-sub'>
					<a href='<%= new_user_session_path %>' class="header-user-cta" title="Your Profile Settings"><span><p class='header-regular-text'><%if current_user.full_name %><%= current_user.full_name %><%else%>Anonymous<%end%></p><!-- <p class="header-home">Login</p> --></span></a>

					<ul>
            			<li><a href="<%=edit_user_registration_path%>"><span>My Profile</span></a>
            			<li><a><span>Account Settings</span></a>
            			<li><a data-method="delete" href='<%=destroy_user_session_path%>'><span>Logout</span></a>
         			</ul>

				</li>

			<% else %>

				<li class="right"><a href='<%= new_user_session_path %>' class="header-user-cta"><span><p class="header-login">Login</p><!-- <p class="header-home">Login</p> --></span></a></li>

				<li class="right"><a href='<%= new_user_registration_path %>' class="header-user-cta"><span><p class="header-signup">Sign Up</p><!-- <p class="header-home">Signup</p> --></span></a></li>

			<%end%>

		</ul>

	</div>

</body>
<html>
