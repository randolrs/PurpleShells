<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address street</th>
      <th>Address city</th>
      <th>Address state or province</th>
      <th>Address postal code</th>
      <th>Country</th>
      <th>Student capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.address_street %></td>
        <td><%= location.address_city %></td>
        <td><%= location.address_state_or_province %></td>
        <td><%= location.address_postal_code %></td>
        <td><%= location.country %></td>
        <td><%= location.student_capacity %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

