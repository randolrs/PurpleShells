<div class="signup-background-container">


</div>

<div class="signup-background-transparency">

	<div class="signup-form">

		<h2>Login</h2>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  
		  <%= devise_error_messages! %>

		  <div><%= f.email_field :email, autofocus: true, placeholder: "Email", class:"signup-form-input" %></div>

		  <div><%= f.password_field :password, autocomplete: "off", placeholder: "Password", class:"signup-form-input"  %></div>

		  <div><%= f.submit "Login", class:"signup-form-submit"   %></div>

		<% end %>

		<%= render "devise/shared/links" %>

	</div>

</div>
